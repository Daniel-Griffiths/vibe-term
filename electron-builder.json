{
  "appId": "com.vibeterm.app",
  "productName": "Vibe Term",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist", 
    "dist-electron",
    "dist-web",
    "public",
    "web",
    "hooks"
  ],
  "mac": {
    "target": ["dmg"],
    "artifactName": "${productName}-Mac-${version}-Installer.${ext}"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "artifactName": "${productName}-Linux-${version}.${ext}"
  }
}